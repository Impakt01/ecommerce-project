            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Product Update</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary">Logout</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Logout All Sessions</button>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-danger">
                            Close Account
                        </button>
                    </div>
                </div>

                <div class="container">
                    <p id="statusMsg"></p>
                    <form class="updateDisplay" id="updateProductName">
                        <div class="mb-3">
                            <label for="productName" class="form-label"> Product Name </label>
                            <input type="text" class="form-control" id="productName">
                        </div>
                        <button type="button" class="btn btn-primary" id="updateProductBtn"
                            onclick="updateOperation('productName')">Update</button>
                    </form>

                    <form class="updateDisplay" id="updateProductPrice">
                        <div class="mb-3">
                            <label for="price" class="form-label"> Price </label>
                            <input type="number" class="form-control" id="price">
                        </div>
                        <button type="button" class="btn btn-primary" id="priceBtn"
                            onclick="updateOperation('price')">Update</button>
                    </form>

                    <form class="updateDisplay" id="updateProductCategory">
                        <div class="mb-3">
                            <label for="category" class="form-label"> Category </label>
                            <input type="text" class="form-control" id="category">
                        </div>
                        <button type="button" class="btn btn-primary" id="categoryBtn"
                            onclick="updateOperation('category')">Update</button>
                    </form>

                    <form class="updateDisplay" id="updateProductDescription">
                        <div class="mb-3">
                            <label for="description" class="form-label"> Description </label>
                            <input type="text" class="form-control" id="description">
                        </div>
                        <button type="button" class="btn btn-primary" id="descriptionBtn"
                            onclick="updateOperation('description')">Update</button>
                    </form>

                    <form class="updateDisplay" id="updateProductInStock">
                        <div class="mb-3">
                            <label for="inStock" class="form-label"> No Instock </label>
                            <input type="text" class="form-control" id="inStock">
                        </div>
                        <button type="button" class="btn btn-primary" id="inStockBtn"
                            onclick="updateOperation('inStock')">Update</button>
                    </form>

                    <form class="updateDisplay" id="updateProductColor">
                        <div class="mb-3">
                            <label for="availableColor1" class="form-label"> availableColor1 </label>
                            <input type="text" class="form-control" id="availableColor1">
                        </div>
                        <div class="mb-3">
                            <label for="availableColor2" class="form-label"> availableColor2 </label>
                            <input type="text" class="form-control" id="availableColor2">
                        </div>
                        <div class="mb-3">
                            <label for="availableColor3" class="form-label"> availableColor3 </label>
                            <input type="text" class="form-control" id="availableColor3">
                        </div>
                        <button type="button" class="btn btn-primary" id="availableColorBtn"
                            onclick="updateOperationColor('availableColor1', 'availableColor2', 'availableColor3')">Update</button>
                    </form>

                    <form class="updateDisplay" id="updateProductSize">
                        <div class="mb-3">
                            <label for="availableSize1" class="form-label"> availableSize1 </label>
                            <input type="text" class="form-control" id="availableSize1">
                        </div>
                        <div class="mb-3">
                            <label for="availableSize2" class="form-label"> availableSize2 </label>
                            <input type="text" class="form-control" id="availableSize2">
                        </div>
                        <div class="mb-3">
                            <label for="availableSize3" class="form-label"> availableSize3 </label>
                            <input type="text" class="form-control" id="availableSize3">
                        </div>
                        <button type="button" class="btn btn-primary" id="availableSizeBtn"
                            onclick="updateOperationSize('availableSize1', 'availableSize2', 'availableSize3')">Update</button>
                    </form>

                    <form class="updateDisplay" id="updateProductImage">
                        <h4> Upload Image For The Product</h4>
                        <div class="mb-3">
                            <label for="productPic" class="form-label"> Product Image </label>
                            <input type="file" class="form-control" id="productPic">
                        </div>
                        <button type="button" class="btn btn-primary" id="updateProductImg"
                            onclick="updateOperation('productPic')">Update</button>
                    </form>
                </div>



            </main>
        </div>
    </div>



