            <div class="container">
                
                <form>
                    <div class="mb-3">
                      <label for="name" class="form-label"> Product Name </label>
                      <input type="text" class="form-control" id="productName">
                    </div> <br>

                    <div class="mb-3">
                        <label for="text" class="form-label"> Available Size 1 </label>
                        <input type="text" class="form-control" id="availableSize1">
                      </div>
                      <div class="mb-3">
                        <label for="text" class="form-label"> Available Size 2</label>
                        <input type="text" class="form-control" id="availableSize2">
                      </div>
                      <div class="mb-3">
                        <label for="text" class="form-label"> Available Size 3</label>
                        <input type="text" class="form-control" id="availableSize3">
                      </div> <br> <br>

                      <div class="mb-3">
                        <label for="tel" class="form-label"> Available color 1 </label>
                        <input type="text" class="form-control" id="availableColor1">
                      </div>
                      <div class="mb-3">
                        <label for="tel" class="form-label"> Available color 2 </label>
                        <input type="text" class="form-control" id="availableColor2">
                      </div>
                      <div class="mb-3">
                        <label for="tel" class="form-label"> Available color 3 </label>
                        <input type="text" class="form-control" id="availableColor3">
                      </div> <br> <br>

                      <div class="mb-3">
                        <label for="price" class="form-label"> Price </label>
                        <input type="text" class="form-control" id="price">
                      </div>
                      <div class="mb-3">
                        <label for="category" class="form-label"> Category </label>
                        <select type="text" class="form-control" id="category">
                            <option>footwears</option>
                            <option>shirts</option>
                            <option>trousers</option>
                            <option>bags</option>
                            <option>caps</option>
                        </select>
                      </div>
                      <div class="mb-3">
                        <label for="description" class="form-label"> Description </label>
                        <input type="text" class="form-control" id="description">
                      </div>
                      <div class="mb-3">
                        <label for="inStock" class="form-label"> How Many Do You Have In Stock </label>
                        <input type="number" class="form-control" id="inStock">
                      </div> 
                    <button type="submit" class="btn btn-primary" id="uploadProduct">Upload</button>
                  </form>  <br>
                  <p id="statusMsg"></p>
                  <br> <br>

                  <form>
                    <h4> Upload Image For The Product</h4>
                    <div class="mb-3">
                        <label for="productPic" class="form-label"> Product Image </label>
                        <input type="file" class="form-control" id="productPic">
                      </div>
                      <button type="submit" class="btn btn-primary" id="uploadProductImg">Upload</button>
                  </form> <br>
                  <p id="statusMsg2"></p>
            </div>

           
               
