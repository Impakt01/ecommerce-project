<%- include('./partials/headers'); -%>



    <div class="bodyDiv">
        <div class="create-act">

            <div class="container">

                <div class="row">

                    <div class="col-lg-8 createAct">
                        <h4> Create A Buyer's Account </h4>
                        <div class="buyerForm">
                          <p class="errorMsg" id="errorMsgId"></p>
                            <form>

                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" name="name" id="name">
                                  </div>

                                  <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="text" class="form-control" name="email" id="email">
                                  </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" name="password" id="password">
                                  </div>

                                  <div class="mb-3">
                                    <label for="comfirmPassword" class="form-label">Comfirm Password</label>
                                    <input type="password" class="form-control" name="password" id="comfirmPassword">
                                  </div>

                                  <div class="mb-3">
                                    <label for="phoneNumber" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" name="phoneNumber" id="phoneNumber">
                                  </div>

                                  <div class="mb-3">
                                    <label for="location" class="form-label">Location</label>
                                    <input type="text" class="form-control" name="location" id="location">
                                  </div>

                                  <button type="submit" class="sellerbutton" id="createBuyerBtn">Create Buyer's Account</button>
                            </form>
                        </div>

                    </div>

                    <div class="col-lg-4 createAct">
                        <p> <button class="sellerActBtn" id="sellerActBtnId">Click Here To Create A Seller's Account  </button> </p>
                        <div class="buyerForm">
                          <p class="errorMsg" id="errorMsgId"></p>
                            <form class="signUpSellerForm" id="sellerForm">

                                <div class="mb-3">
                                    <label for="shopName" class="form-label">Shop Name</label>
                                    <input type="text" class="form-control" name="shopName" id="shopName">
                                  </div>

                                  <div class="mb-3">
                                    <label for="email2" class="form-label">Email</label>
                                    <input type="text" class="form-control" name="email" id="email2">
                                  </div>

                                <div class="mb-3">
                                    <label for="password2" class="form-label">Password</label>
                                    <input type="password" class="form-control" name="password" id="password2">
                                  </div>

                                  <div class="mb-3">
                                    <label for="comfirmPassword2" class="form-label">Comfirm Password</label>
                                    <input type="password" class="form-control" name="comfirmPassword" id="comfirmPassword2">
                                  </div>

                                  <div class="mb-3">
                                    <label for="phoneNumber2" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" name="phoneNumber" id="phoneNumber2">
                                  </div>

                                  <button type="submit" class="sellerbutton" id="createSellerBtn">Create Seller's Account</button>
                            </form>
                        </div>

                    </div>

                </div>
                
            </div>

        </div>
    </div>









